<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css" />
    <!-- static path for public folder is already set in app.js -->
  </head>
  <body>
    <div class="main-content">
      <%- include('../partials/header.ejs') %>
      <article class="widget">
        <form class="weatherLocation">
          <input placeholder="Location" type="text" /> &nbsp;
          <button>Search</button>
        </form>
        <div class="weatherIcon"><i class="wi wi-day-cloudy"></i></div>
        <div class="weatherInfo">
          <div class="temperature"><span></span></div>
          <div class="description">
            <div class="weatherCondition"></div>
            <div class="place"></div>
          </div>
        </div>
        <div class="date"></div>
      </article>
    </div>
    <script src="frontapp.js"></script>
    <!-- absolute path -->
  </body>
</html>
